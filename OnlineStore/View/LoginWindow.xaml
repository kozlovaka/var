<Window x:Class="OnlineStore.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="500">
    <StackPanel Margin="20">
        <Label Content="Логин:"/>
        <TextBox x:Name="txtLogin" Margin="0 0 0 10"/>

        <Label Content="Пароль:"/>
        <PasswordBox x:Name="txtPassword" Margin="0 0 0 10"/>

        <Label Content="Капча:"/>
        <TextBox x:Name="txtCaptcha" Margin="0 0 0 10"/>

        <Image x:Name="imgCaptcha" Width="200" Height="50" Margin="0 10"/>

        <Button Content="Войти" Margin="0 10" Click="Login_Click"/>
        <Button Content="ЛОХ" Margin="0 10" Click="loh_click"/>
        <Button Content="ЛОХ1" Margin="0 10" Click="loh1_click"/>

        <TextBlock Name="lblError" Foreground="Red"/>

    </StackPanel>
</Window>
